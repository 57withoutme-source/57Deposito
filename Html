    <script>
        // Data awal
        let currentUser = null;
        let balance = 10000000;
        let transactions = [
            { type: 'Deposito 6 Bulan', amount: 3000000, date: '20 Jun 2023, 10:15', status: 'Berhasil' },
            { type: 'Deposito 3 Bulan', amount: 2000000, date: '15 Mei 2023, 14:30', status: 'Berhasil' },
            { type: 'Deposito 1 Bulan', amount: 1500000, date: '10 Apr 2023, 09:45', status: 'Berhasil' }
        ];
        let selectedDeposit = {
            type: '6 Bulan',
            interestRate: 7,
            minAmount: 3000000
        };

        // DOM Elements
        const loginSection = document.getElementById('loginSection');
        const appContent = document.getElementById('appContent');
        const logoutBtn = document.getElementById('logoutBtn');
        const loginBtn = document.getElementById('loginBtn');
        const userNameElement = document.getElementById('userName');
        const currentBalance = document.getElementById('currentBalance');
        const depositOptions = document.querySelectorAll('.deposit-option');
        const depositAmountInput = document.getElementById('depositAmount');
        const amountError = document.getElementById('amountError');
        const estimatedInterest = document.getElementById('estimatedInterest');
        const totalAtMaturity = document.getElementById('totalAtMaturity');
        const depositBtn = document.getElementById('depositBtn');
        const successModal = document.getElementById('successModal');
        const successAmount = document.getElementById('successAmount');
        const closeModalBtn = document.getElementById('closeModalBtn');

        // Event Listeners
        loginBtn.addEventListener('click', handleLogin);
        logoutBtn.addEventListener('click', handleLogout);
        depositOptions.forEach(option => {
            option.addEventListener('click', () => selectDepositOption(option));
        });
        depositAmountInput.addEventListener('input', updateDepositDetails);
        depositBtn.addEventListener('click', processDeposit);
        closeModalBtn.addEventListener('click', closeModal);

        // Functions
        function handleLogin() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            
            if (username && password) {
                currentUser = {
                    name: 'John Doe', // Nama default untuk demo
                    username: username
                };
                
                loginSection.classList.add('hidden');
                appContent.classList.remove('hidden');
                logoutBtn.classList.remove('hidden');
                userNameElement.textContent = currentUser.name;
                updateBalance();
            } else {
                alert('Silakan isi username dan password');
            }
        }

        function handleLogout() {
            currentUser = null;
            loginSection.classList.remove('hidden');
            appContent.classList.add('hidden');
            logoutBtn.classList.add('hidden');
            document.getElementById('username').value = '';
            document.getElementById('password').value = '';
        }

        function selectDepositOption(option) {
            // Hapus class aktif dari semua opsi
            depositOptions.forEach(opt => {
                opt.classList.remove('active-deposit');
                opt.classList.remove('border-blue-500');
                opt.classList.remove('bg-blue-50');
            });
            
            // Tambah class aktif ke opsi yang dipilih
            option.classList.add('active-deposit');
            option.classList.add('border-blue-500');
            option.classList.add('bg-blue-50');
            
            // Update selected deposit
            const title = option.querySelector('h4').textContent;
            const interestText = option.querySelector('p:nth-of-type(1)').textContent;
            const minAmountText = option.querySelector('p:nth-of-type(2)').textContent;
            
            selectedDeposit = {
                type: title,
                interestRate: parseInt(interestText),
                minAmount: parseInt(minAmountText.replace(/\D/g, ''))
            };
            
            // Validasi jumlah deposit
            validateDepositAmount();
            updateDepositDetails();
        }

        function validateDepositAmount() {
            const amount = parseInt(depositAmountInput.value) || 0;
            
            if (amount < selectedDeposit.minAmount) {
                amountError.textContent = `Minimal deposito Rp${selectedDeposit.minAmount.toLocaleString('id-ID')}`;
                amountError.classList.remove('hidden');
                depositBtn.disabled = true;
                depositBtn.classList.add('opacity-50');
                return false;
            } else if (amount > balance) {
                amountError.textContent = `Saldo tidak mencukupi`;
                amountError.classList.remove('hidden');
                depositBtn.disabled = true;
                depositBtn.classList.add('opacity-50');
                return false;
            } else {
                amountError.classList.add('hidden');
                depositBtn.disabled = false;
                depositBtn.classList.remove('opacity-50');
                return true;
            }
        }

        function updateDepositDetails() {
            if (validateDepositAmount()) {
                const amount = parseInt(depositAmountInput.value) || 0;
                const interest = Math.floor(amount * selectedDeposit.interestRate / 100);
                const total = amount + interest;
                
                estimatedInterest.textContent = `Rp${interest.toLocaleString('id-ID')}`;
                totalAtMaturity.textContent = `Rp${total.toLocaleString('id-ID')}`;
            }
        }

        function processDeposit() {
            if (validateDepositAmount()) {
                const amount = parseInt(depositAmountInput.value);
                const interest = Math.floor(amount * selectedDeposit.interestRate / 100);
                
                // Kurangi saldo
                balance -= amount;
                updateBalance();
                
                // Tambahkan transaksi
                const now = new Date();
                const dateStr = now.toLocaleDateString('id-ID', { 
                    day: 'numeric', 
                    month: 'short', 
                    year: 'numeric' 
                }) + ', ' + now.toLocaleTimeString('id-ID', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });
                
                transactions.unshift({
                    type: `Deposito ${selectedDeposit.type}`,
                    amount: amount,
                    date: dateStr,
                    status: 'Berhasil'
                });
                
                // Update riwayat transaksi
                updateTransactionHistory();
                
                // Tampilkan modal sukses
                successAmount.textContent = `Rp${amount.toLocaleString('id-ID')}`;
                successModal.classList.remove('hidden');
                
                // Reset form
                depositAmountInput.value = '';
                updateDepositDetails();
            }
        }

        function updateBalance() {
            currentBalance.textContent = `Rp${balance.toLocaleString('id-ID')}`;
        }

        function updateTransactionHistory() {
            const historyContainer = document.querySelector('.transaction-history');
            historyContainer.innerHTML = '';
            
            transactions.forEach(transaction => {
                const transactionElement = document.createElement('div');
                transactionElement.className = 'flex justify-between items-center py-3 border-b border-gray-100';
                transactionElement.innerHTML = `
                    <div class="flex items-center space-x-3">
                        <div class="p-2 bg-green-100 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                            </svg>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-800">${transaction.type}</p>
                            <p class="text-xs text-gray-500">${transaction.date}</p>
                        </div>
                    </div>
                    <div class="text-right">
                        <p class="text-sm font-medium text-green-600">+Rp${transaction.amount.toLocaleString('id-ID')}</p>
                        <p class="text-xs text-gray-500">${transaction.status}</p>
                    </div>
                `;
                historyContainer.appendChild(transactionElement);
            });
        }

        function closeModal() {
            successModal.classList.add('hidden');
        }

        // Inisialisasi
        selectDepositOption(document.querySelector('.active-deposit'));
    </script>
</body>
</html>

